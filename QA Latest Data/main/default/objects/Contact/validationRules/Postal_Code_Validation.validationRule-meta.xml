<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_Code_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(ISBLANK(MailingPostalCode)), 
NOT(REGEX( MailingPostalCode , &quot;\\d{5}(-\\d{4})?&quot;)))</errorConditionFormula>
    <errorDisplayField>MailingPostalCode</errorDisplayField>
    <errorMessage>Please Enter a Valid Zip/Postal Code</errorMessage>
</ValidationRule>
